import java.util.Scanner;
public class Baslangic {
    public static void main(String[] args) {
        double armutKgFiyati = 2.14, elmaKgFiyati = 3.67, domatesKgFiyati = 1.11;
        double muzKgFiyati = 0.95, patlicanKgFiyati = 5;

        Scanner input = new Scanner(System.in);
        System.out.print("Armutu kaç kilo aldığınızı yazınız:  ");
        double armut = input.nextDouble();
        armut *= armutKgFiyati;
        System.out.print("Elmayı kaç kilo aldığınızı yazınız:  ");
        double elma = input.nextDouble();
        elma *= elmaKgFiyati;
        System.out.print("Domatesi kaç kilo aldığınızı yazınız:  ");
        double domates = input.nextDouble();
        domates *= domatesKgFiyati;
        System.out.print("Muzu kaç kilo aldığınızı yazınız:  ");
        double muz = input.nextDouble();
        muz *= muzKgFiyati;
        System.out.print("Patlıcanı kaç kilo aldığınızı yazınız:  ");
        double patlican = input.nextDouble();
        patlican *= patlicanKgFiyati;

        double alisverisToplam = armut + elma + domates + muz + patlican;
        System.out.print("Toplam tutarınız:   " + alisverisToplam);


    }

}
